#set -e
BUILD_DIR=$1
SSH_DIR=~/.ssh

echo "-----> Running SSH private key setup"

mkdir -p $SSH_DIR/
chmod 700 $SSH_DIR/

if [ -n "$SSH_KEY" ]; then
  echo "$SSH_KEY" | base64 --decode > $SSH_DIR/id_rsa
  chmod 400 $SSH_DIR/id_rsa

  #ssh -oStrictHostKeyChecking=no -T git@github.com 2>&1 | indent
  ssh -oStrictHostKeyChecking=no -T git@bitbucket.org 2>&1 | indent

  #echo "Host bitbucket.org\nIdentityFile $SSH_DIR/id_rsa\nStrictHostKeyChecking no" > $SSH_DIR/config
  #echo "Host bitbucket.org\nIdentityFile $SSH_DIR/id_rsa\nStrictHostKeyChecking no" > $SSH_DIR/config
  #chmod 600 $SSH_DIR/config
  exit 0

else
  echo "-----> No SSH private key found "
  echo "try --->  heroku config:set SSH_KEY=$(cat ~/.ssh/id_rsa | base64)"
  exit 1
fi

